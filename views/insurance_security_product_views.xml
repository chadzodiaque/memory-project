<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="insurance_security_product_action" model="ir.actions.act_window">
        <field name="name">Produit d'assurance</field>
        <field name="res_model">insurance.security.product</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Aucun produit d'assurance
            </p>
        </field>
    </record>

    <record id="insurance_security_product_view_tree" model="ir.ui.view">
        <field name="name">insurance.security.product.tree</field>
        <field name="model">insurance.security.product</field>
        <field name="arch" type="xml">
            <tree string="Product Tree">
                <field name="name"/>
                <field name="prime_price"/>
                <field name="amount_guarantee"/>
                <field name="creation_date"/>
            </tree>
        </field>
    </record>

    <record id="insurance_security_product_view_form" model="ir.ui.view">
        <field name="name">insurance.security.product.view.form</field>
        <field name="model">insurance.security.product</field>
        <field name="arch" type="xml">
            <form string="Insurance security product">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        
                        
                    </div>
                    
                    <group>

                        <group string="Image du produit d'assurance">
                            <field name="image" widget="image" />
                            
                        </group>
                        
                        <group string="Détails sur le produit d'assurance " >
                            <field name="type_ids" widget="many2many_tags" options="{'color_field': 'color'}" string="Type de produit d'assurance"/>
                            <field name="currency_id" />
                            <field name="amount_guarantee" widget="monetary" />
                            <field name="prime_price" widget="monetary" />
                            <field name="coverage_type" string="Type de couverture" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Avantages et exclusions">
                            <field name="advantages" />
                        </page>
                        <page string="Conditions et modalités">
                            <field name="conditions" />
                        </page>
                        <page string="Options de personnalisation">
                            <field name="options" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
