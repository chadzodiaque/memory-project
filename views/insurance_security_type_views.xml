<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="insurance_security_type_action" model="ir.actions.act_window">
        <field name="name">Type d'assurance</field>
        <field name="res_model">insurance.security.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Aucun type d'assurance 
            </p>
        </field>
    </record>

    <record id="insurance_security_type_view_tree" model="ir.ui.view">
        <field name="name">insurance.security.type.tree</field>
        <field name="model">insurance.security.type</field>
        <field name="arch" type="xml">
            <tree string="Type Tree">
                <field name="name"/>
                <field name="coverage_risks"/>
                <field name="creation_date"/>
            </tree>
        </field>
    </record>

    <record id="insurance_security_type_view_form" model="ir.ui.view">
        <field name="name">insurance.security.type.view.form</field>
        <field name="model">insurance.security.type</field>
        <field name="arch" type="xml">
            <form string="Insurance security type">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="color" string="Choisir une couleur" widget="color_picker" />
                            <field name="coverage_risks" />
                            <field name="creation_date"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Conditions de couverture">
                            <field name="conditions" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
